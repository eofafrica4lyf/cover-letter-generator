{
  "name": "cover-letter-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:api": "tsx watch server/dev-server.ts",
    "dev:full": "concurrently \"npm run dev:api\" \"npm run dev\" --names \"API,VITE\" --prefix-colors \"blue,green\"",
    "dev:emulator": "VITE_USE_FIREBASE_EMULATOR=true vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "emulators": "firebase emulators:start --only firestore,auth"
  },
  "dependencies": {
    "@vercel/node": "^3.0.12",
    "cheerio": "^1.0.0-rc.12",
    "dexie": "^3.2.4",
    "dexie-react-hooks": "^1.1.7",
    "docx": "^8.5.0",
    "firebase": "^10.7.1",
    "franc-min": "^6.2.0",
    "jspdf": "^2.5.1",
    "mammoth": "^1.6.0",
    "openai": "^4.20.1",
    "pdf-parse": "^1.1.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-dropzone": "^14.2.3",
    "react-router-dom": "^6.22.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.11",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "express": "^5.2.1",
    "fast-check": "^3.15.0",
    "globals": "^16.5.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^6.0.0",
    "vitest": "^1.2.2"
  }
